{
    "compilerOptions": {
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "lib": [
            "ES6",
            "ES2017"
        ]
    },
    "filesGlob": [
        "typings/**/*.d.ts",
        "src/**/*.ts",
        "scripts/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "built",
        "src/**/*.spec.ts"
    ],
    "compileOnSave": true
}
