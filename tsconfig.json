{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "lib": [
            "ES6",
            "ES2017"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true
}
